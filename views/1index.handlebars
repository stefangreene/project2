{{!-- The sign up modal --}}
<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signUpModalTitle">Create Account</h5>
      </div>
      <div class="modal-body" id="signUpModalBody">
        <form id="signup" name="signup" method="post" action="/signup">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input class="text" name="email" type="email" />
          </div>
          <div class="form-group">
            <label for="firstname">Firstname</label>
            <input name="firstname" type="text" />
          </div>
          <div class="form-group">
            <label for="lastname">Lastname</label>
            <input name="lastname" type="text" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" />
          </div>
          <button class="btn btn-primary" type="submit" value="Sign Up">Sign Up</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{{!-- End of the profile modal --}}

